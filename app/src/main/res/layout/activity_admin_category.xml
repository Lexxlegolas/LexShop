<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".admin.AdminCategoryActivity" android:id="@+id/slogan_category">

    <TextView
            android:text="Add New Category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="45dp"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_centerHorizontal="true"
                  app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" android:id="@+id/linear1_category_layout">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="80dp"
                   android:id="@+id/t_shirt"
                   android:src="@drawable/tshirts"
        />
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/sports_t_shirt"
                   android:src="@drawable/sports"
        />
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/female_dresses"
                   android:src="@drawable/female_dresses"
        />
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/sweaters"
                   android:src="@drawable/sweather"
        />


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_centerHorizontal="true"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp"
                  android:id="@+id/linear2_category_layout" android:layout_marginTop="45dp"
                  app:layout_constraintTop_toBottomOf="@+id/linear1_category_layout">

        <ImageView android:layout_width="90dp"
                   android:layout_height="80dp"
                   android:id="@+id/glasses"
                   android:src="@drawable/glasses"
        />
        <ImageView android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:id="@+id/purses_bags_wallets"
                   android:src="@drawable/purses_bags"
        />
        <ImageView android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:id="@+id/hats"
                   android:src="@drawable/hats"
        />
        <ImageView android:layout_width="70dp"
                   android:layout_height="80dp"
                   android:id="@+id/shoes"
                   android:src="@drawable/shoess"
                   android:layout_marginStart="16dp"
        />


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_centerHorizontal="true"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp"
                  android:id="@+id/linear3_category_layout"
                  android:layout_marginTop="45dp" app:layout_constraintTop_toBottomOf="@+id/linear2_category_layout">

        <ImageView android:layout_width="90dp"
                   android:layout_height="80dp"
                   android:id="@+id/headphones"
                   android:src="@drawable/headphoness"
        />
        <ImageView android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:id="@+id/laptops"
                   android:src="@drawable/laptops"
        />
        <ImageView android:layout_width="80dp"
                   android:layout_height="80dp"
                   android:id="@+id/watches"
                   android:src="@drawable/watches"
        />
        <ImageView android:layout_width="70dp"
                   android:layout_height="80dp"
                   android:id="@+id/mobile"
                   android:src="@drawable/mobiles"
                   android:layout_marginStart="16dp"
        />


    </LinearLayout>
    <Button
            android:text="Back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:id="@+id/back" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/linear3_category_layout"/>


</android.support.constraint.ConstraintLayout>