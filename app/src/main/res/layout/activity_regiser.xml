<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registerLogin.RegiserActivity" android:background="@drawable/register">

    <ImageView
            android:layout_width="300dp"
            android:layout_height="100dp" app:srcCompat="@drawable/applogo"
            android:id="@+id/regiser_applogo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="190dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:padding="20dp"
            android:background="@drawable/input"
            android:textSize="17sp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:hint="Name"
            android:id="@+id/username_register" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/regiser_applogo"
            app:layout_constraintStart_toStartOf="@+id/regiser_applogo"
            app:layout_constraintEnd_toEndOf="@+id/regiser_applogo"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:padding="20dp"
            android:background="@drawable/input"
            android:textSize="17sp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:hint="Phone Number"
            android:id="@+id/number_register" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/username_register"
            app:layout_constraintStart_toStartOf="@+id/username_register" app:layout_constraintEnd_toEndOf="@+id/username_register"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@drawable/input"
            android:padding="20dp"
            android:textSize="17sp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:hint="Password"
            android:id="@+id/password_regiser" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/number_register"
            app:layout_constraintEnd_toEndOf="@+id/number_register" app:layout_constraintStart_toStartOf="@+id/number_register"/>
    <Button
            android:text="Create Account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:padding="20dp"
            android:textStyle="bold|italic"
            android:background="@drawable/buttons"
            android:textColor="@android:color/white"
            android:id="@+id/register_register_btn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password_regiser"
            app:layout_constraintStart_toStartOf="@+id/password_regiser"
            app:layout_constraintEnd_toEndOf="@+id/password_regiser"/>
</android.support.constraint.ConstraintLayout>